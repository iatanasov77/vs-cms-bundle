{% extends "layout.html.twig" %}

{% block head_styles %}
    {{ parent() }}
    
{% endblock %}

{# Import Macros #}
{% from 'SyliusResourceBundle:Macros:actions.html.twig' import create %}

{% block title %}{{ parent() }} :: Edit Post{% endblock %}
{% block pageTitle %}<i class="icon_genius"></i> Edit Post{% endblock %}
{% block content %}
    <div class="container-fluid  dashboard-content">
        <!-- ============================================================== -->
        <!-- pageheader -->
        <!-- ============================================================== -->
        <div class="row">
            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                <div class="page-header">
                    <h2 class="pageheader-title">{% if(item.getId()) %}Edit:    {{ item.getName() }}{% else %}Create New Post{% endif %}</h2>
                    <p class="pageheader-text">Proin placerat ante duiullam scelerisque a velit ac porta, fusce sit amet vestibulum mi. Morbi lobortis pulvinar quam.</p>
                    <div class="page-breadcrumb">
                        <nav aria-label="breadcrumb">
                            {{ knp_menu_render('breadcrumbs', {'template': 'menu/breadcrumb.html.twig'}) }}
                        </nav>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- ============================================================== -->
        <!-- end pageheader -->
        <!-- ============================================================== -->
        
        <div class="row">
            <!-- ============================================================== -->
            <!-- basic tabs  -->
            <!-- ============================================================== -->
            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                <div class="card">
                    <h5 class="card-header">Blog Post</h5>
                    <div class="card-body">
                    
                        {{ form_start(form, { 'attr': {'class': 'form-horizontal '} }) }}
                            {{ form_widget(form._token) }}
                
                            {% if form_errors(form) is not empty %}
                                <div class="alert alert-block alert-danger fade in">
                                    <button type="button" class="close close-sm" data-dismiss="alert">
                                        <i class="icon-remove"></i>
                                    </button>
                                    <strong>Error!</strong> {{ form_errors(form) }}
                                </div>
                            {% endif %}
                            
                            <div class="form-group">
                                {{ form_label(form.locale, null, {
                                    'label_attr': {'class': 'col-form-label'}
                                    }) 
                                }}
                                
                                {{ form_widget(form.locale, {'attr': {'class': 'form-control'}}) }}
                            </div>
                             
                            <div class="form-group">
                                {{ form_label(form.parent, null, {
                                    'label_attr': {'class': 'col-form-label'}
                                    })
                                }}
                                {{ form_widget(form.parent, {
                                    'attr': {
                                        'class': 'easyui-combotree',
                                        'data-options': ''
                                    }
                                }) }}
                            </div>
                            
                            <div class="form-group">
                                {{ form_label(form.name, null, {
                                    'label_attr': {'class': 'col-form-label'}
                                    }) 
                                }}
                                
                                {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
                            </div>
                            
                            <div class="row">&nbsp;</div>
                            <div class="input-group row">
                                <div class="col-sm-1">
                                    {{ form_widget(form.btnSave, {'attr': {'class': 'btn btn-primary', 'id':'btnSave'}}) }}
                                </div>
                                
                                {{ form_widget(form.btnCancel, {'attr': {'class': 'btn btn-default', 'id':'btnCancel'}}) }}
                            </div>
                        {{ form_end(form, {'render_rest': false}) }}
                    </div>
                </div>
            </div>
        </div>
    </div> 
{% endblock %}


