<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                  http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd"
                  xmlns:gedmo="http://gediminasm.org/schemas/orm/doctrine-extensions-mapping"
>

    <mapped-superclass name="VS\CmsBundle\Model\PageCategoryRelation">
        <id name="id" column="id" type="integer">
            <generator strategy="AUTO" />
        </id>
        
        <many-to-one field="page" target-entity="VS\CmsBundle\Model\PageInterface" inversed-by="relations">
        	<join-column name="page_id" referenced-column-name="id" nullable="false" />
        </many-to-one>
        
        <many-to-one field="category" target-entity="VS\CmsBundle\Model\PageCategoryInterface" inversed-by="relations">
        	<join-column name="category_id" referenced-column-name="id" nullable="false" />
        </many-to-one>
    </mapped-superclass>

</doctrine-mapping>
