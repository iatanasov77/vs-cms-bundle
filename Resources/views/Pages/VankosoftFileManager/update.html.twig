{% extends "@VSApplication/layout.html.twig" %}

{% import "@VSApplication/Macros/form.html.twig" as vs_form %}

{% if( item.id ) %}
	{% set pageTitle = 'vs_cms.template.filemanager_update_title' | trans( {},'VSCmsBundle' ) %}
{% else %}
	{% set pageTitle = 'vs_cms.template.filemanager_create_title' | trans( {},'VSCmsBundle' ) %}
{% endif %}

{% block title %}{{ parent() }} :: {{ pageTitle}}{% endblock %}
{% block pageTitle %}<i class="icon_genius"></i> {{ pageTitle }}{% endblock %}

{% block content %}
    <div class="container-fluid  dashboard-content">
    	<!-- ============================================================== -->
        <!-- pageheader -->
        <!-- ============================================================== -->
        <div class="row">
            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                <div class="page-header">
                    <h2 class="pageheader-title">{% if(item.id) %}{{ pageTitle }}: {{ item.title }}{% else %}{{ pageTitle }}{% endif %}</h2>
                    <p class="pageheader-text">Proin placerat ante duiullam scelerisque a velit ac porta, fusce sit amet vestibulum mi. Morbi lobortis pulvinar quam.</p>
                    <div class="page-breadcrumb">
                    	<nav aria-label="breadcrumb">
                            {{ knp_menu_render( 'breadcrumbs', {'template': '@VSApplication/Menu/breadcrumb.html.twig'} ) }}
                        </nav>
                    </div>
                </div>
            </div>
        </div>
        <!-- ============================================================== -->
        <!-- end pageheader -->
        <!-- ============================================================== -->
        
    	<div class="row">
            <!-- ============================================================== -->
            <!-- basic tabs  -->
            <!-- ============================================================== -->
            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                <div class="card">
                	<h5 class="card-header">{{ 'vs_cms.template.filemanager_update_details_title' | trans( {},'VSCmsBundle' ) }}</h5>
                	<div class="card-body">
						{% if form_errors(form) is not empty %}
			                <div class="alert alert-block alert-danger fade in">
			                    <button type="button" class="close close-sm" data-dismiss="alert">
			                        <i class="icon-remove"></i>
			                    </button>
			                    <strong>{{ 'vs_application.form.errors_title' | trans( {},'VSApplicationBundle' ) }}</strong> {{ form_errors(form) }}
			                </div>
			            {% endif %}
			            <div id="pageFormContainer" data-itemId="{{ item.id }}">
                            {% if(item.id) %}{% set method = "PUT" %}{% else %}{% set method = "POST" %}{% endif %}
                            {{ form_start(form, { 'attr': {'class': 'form-horizontal '}, 'method': method }) }}
                                {{ form_widget(form._token) }}
                                
                                <div class="form-group">
                                    {{ form_label(form.currentLocale, null, {
                                        'label_attr': {'class': 'col-form-label'}
                                        }) 
                                    }}
                                    
                                    {{ form_widget(form.currentLocale, {'attr': {'class': 'form-control'}}) }}
                                </div>
    
                                <div class="form-group">
                                    {{ form_label(form.title, null, {
                                        'label_attr': {'class': 'col-form-label'}
                                        }) 
                                    }}
                                    
                                    {{ form_widget(form.title, {'attr': {'class': 'form-control'}}) }}
                                </div>
                                
                                {{ vs_form.buttons( form ) }}
                            {{ form_end(form, {'render_rest': false}) }}
                        </div>
	        		</div>
				</div>
				
				{% if( item.id ) %}
                    <div class="card">
                        <div class="card-header">
                            <div class="float-left" style="height:30px; padding-top:10px;">{{ 'vs_cms.template.filemanager_update_uploaded_files' | trans( {},'VSCmsBundle' ) }}</div>
                            <div class="btn-group float-right">
                                <a class="btn btn-primary btnUploadFiles"
                                    title="{{ 'vs_cms.template.filemanager_update_upload_file' | trans( {},'VSCmsBundle' ) }}"
                                    href="javascript:void(0);" 
                                    data-url="{{ path('vs_cms_filemanager_vankosoft_get_upload_form', {'fileManagerId': item.id, 'fileManagerFileId': 0}) }}"
                                >
                                    {{ 'vs_cms.template.filemanager_update_upload_file' | trans( {},'VSCmsBundle' ) }}
                                </a>&nbsp;
                            </div>
                        </div>
                        <div class="card-body" style="padding: 0;">
                            {% include '@VSCms/Pages/VankosoftFileManager/Partial/table_filemanager_files.html.twig' %}
                        </div>
                    </div>
                {% endif %}
			</div>
        </div>
    </div>   
{% endblock content %}

{% block modals %}
    {% include '@VSCms/Modals/filemanager_upload_file.html.twig' %}
{% endblock %}

{% block body_scripts %}
    {{ parent() }}
    
    {{ encore_entry_script_tags( 'js/filemanager-index' ) }}
    {{ encore_entry_script_tags( 'js/filemanager-file-upload' ) }}
{% endblock %}
