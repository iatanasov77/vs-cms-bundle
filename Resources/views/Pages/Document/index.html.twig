{% extends "@VSApplication/layout.html.twig" %}

{# Import Macros #}
{% import "@VSApplication/Macros/alerts.html.twig" as alerts %}
{% from "@VSApplication/Macros/pagination.html.twig" import pagination %}

{# Override Blocs #}
{% block title %}{{ parent() }} :: TOC{% endblock %}
{% block pageTitle %}<i class="icon_genius"></i> TOC{% endblock %}

{% block content %}
	<div class="container-fluid  dashboard-content">
    	<!-- ============================================================== -->
        <!-- pageheader -->
        <!-- ============================================================== -->
        <div class="row">
            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                <div class="page-header">
                    <h2 class="pageheader-title">TOC LIsts</h2>
                    <p class="pageheader-text">Proin placerat ante duiullam scelerisque a velit ac porta, fusce sit amet vestibulum mi. Morbi lobortis pulvinar quam.</p>
                    <div class="page-breadcrumb">
                        <nav aria-label="breadcrumb">
                            {{ knp_menu_render('breadcrumbs', {'template': '@VSApplication/Menu/breadcrumb.html.twig'}) }}
                        </nav>
                    </div>
                </div>
            </div>
        </div>
        <!-- ============================================================== -->
        <!-- end pageheader -->
        <!-- ============================================================== -->
        
        <div class="row">
            <div class="col-xl-6 col-lg-12 col-md-12 col-sm-12 col-12 mb-5">
                
                {% if items|length > 0 %}
                    <table class="table table-striped table-advance table-hover">
                        <tr>
                            <th>TOC Document Title</th>
                            <th width="150">Action</th>
                        </tr>
                        {% for item in items %}
                            <tr>
                                <td>{{ item.title }}</td>

                                <td>
	                                <div class="btn-group">
	                                    <div class="btn-group">
	                                        <a class="btn btn-primary" href="{{ path('vs_cms_multipage_toc_update', {'id': item.id}) }}" title="Edit TOC Document">
	                                            <i class="fas fa-edit"></i>
	                                        </a>
	                                        <a class="btn btn-danger btnDelete"
	                                        	href="{{ path('vs_cms_multipage_toc_delete', {'id': item.id}) }}" 
	                                        	data-csrfToken="{{ csrf_token( item.id ) }}" 
	                                        	title="Delete TOC"
	                                        >
	                                            <i class="icon_close_alt2"></i>
	                                        </a>
	                                    </div>
	                                </div>
	                            </td>
                            </tr>
                        {% endfor %}
                    </table>
                {% else %}
                {# {{ alerts.info('sylius.ui.there_are_no_mappers_to_display'|trans) }} #}
                {% endif %}
            </div>
        </div>
    </div>
    
    {% include '@VSApplication/Partial/resource-delete.html.twig' %}
{% endblock %}

{% block head_styles %}
    {{ parent() }}
    
    {{ encore_entry_link_tags( 'js/multipage-toc-index' ) }}
{% endblock %}

{% block body_scripts %}
    {{ parent() }}
    
    {{ encore_entry_script_tags( 'js/multipage-toc-index' ) }}
{% endblock %}
