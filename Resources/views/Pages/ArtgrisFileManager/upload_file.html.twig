{% extends "@VSApplication/layout.html.twig" %}

{% set pageTitle = 'vs_cms.template.filemanager_upload_file_title' | trans( {},'VSCmsBundle' ) %}

{% block title %}{{ parent() }} :: {{ pageTitle}}{% endblock %}

{% block pageTitle %}
    <h2 class="pageheader-title"><i class="icon_genius"></i> {{ pageTitle }}</h2>
    <p class="pageheader-text">Proin placerat ante duiullam scelerisque a velit ac porta, fusce sit amet vestibulum mi. Morbi lobortis pulvinar quam.</p>
{% endblock %}

{% block content %}
	<div class="row">
        <!-- ============================================================== -->
        <!-- basic tabs  -->
        <!-- ============================================================== -->
        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
            <div class="card">
            	<div class="card-body">
					{% if form_errors(form) is not empty %}
		                <div class="alert alert-block alert-danger fade in">
		                    <button type="button" class="close close-sm" data-dismiss="alert">
		                        <i class="icon-remove"></i>
		                    </button>
		                    <strong>{{ 'vs_application.form.errors_title' | trans( {},'VSApplicationBundle' ) }}</strong> {{ form_errors(form) }}
		                </div>
		            {% endif %}
		            <div id="pageFormContainer">
                        {% include '@VSCms/Pages/ArtgrisFileManager/partial/upload_file_form.html.twig' %}
                    </div>
        		</div>
			</div>
		</div>
    </div>  
{% endblock content %}

{% block head_styles %}
    {{ parent() }}
{% endblock %}

{% block body_scripts %}
    {{ parent() }}
    
    {{ encore_entry_script_tags( 'js/filemanager-file-upload' ) }}
{% endblock %}
