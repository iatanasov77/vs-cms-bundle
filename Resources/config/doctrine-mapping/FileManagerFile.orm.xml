<?xml version="1.0" encoding="UTF-8" ?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" 
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd"
>
    <mapped-superclass name="Vankosoft\CmsBundle\Model\FileManagerFile">
        <many-to-one field="owner" target-entity="Vankosoft\CmsBundle\Model\FileManagerInterface" inversed-by="files">
            <join-column name="owner_id" referenced-column-name="id" nullable="false" on-delete="CASCADE"/>
        </many-to-one>
        
        <field name="originalName" column="original_name" type="string" nullable="false">
            <options>
                <option name="comment">The Original Name of the File.</option>
                <option name="default"></option>
            </options>
        </field>
    </mapped-superclass>
</doctrine-mapping>